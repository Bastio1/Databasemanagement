<Window x:Class="Databasemanagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Databasemanagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <StackPanel>
            <Button Content="Get Products" Click="Button_Click"/>
            <Button Content="Product Category" Click="Button_Click_1"/>
            <Button Content="Most Expensive Products" Click="Button_Click_2"/>
            <Button Content="Sort by ID, Name, Color and Price" Click="Button_Click_3"/>
            <Button Content="Add Category" Click="Button_Click_4"/>

            <DataGrid Height="500" Width="1000" Name="dg"></DataGrid>
        
    </StackPanel>

    </Grid>
</Window>
